class SMS_store:
    """Create a new class"""
    global c
    c=0

    def __init__(self, has_been_viewed=False, from_number=0, time_arrived=0, text_of_SMS=0, c=0):
        """"""
        self.has_been_viewed=has_been_viewed
        self.from_number=from_number
        self.time_arrived=time_arrived
        self.text_of_SMS=text_of_SMS
        self.c=c

    def add_new_arrival(self, from_number, time_arrived, text_of_SMS):
        fn=from_number
        ta=time_arrived
        tSmS=text_of_SMS
        lis[c][0]=fn
        lis[c][1]=ta
        lis[c][2]=tSmS
        self.c= self.c + 1
        return lis

    def message_count(self):
        return(self.c)

