def display_menu():
    print("1. Add a new visit")
    print("2. Print the visits")
    print("3. Terminate the program")
    print()
    print("Please select an option from the above menu")

def get_menu_choice():
    option_valid=False
    while not option_valid:
        try:
            get_menu_choice=int(input("Option Selected:  "))
            if 0<=get_menu_choice<=3:
                option_valid=True
            else:
                print("Please enter a valid option")
        except ValueError:
            print("Please enter a valid option")
    return get_menu_choice

def lets_go():
    print("Welcome to the Administration Office")
    f=open("sports.txt","w+")
    print()
    noexit=True
    while noexit:
        display_menu()
        option0=get_menu_choice()
        if option0==1:

            option=options()
            option2=month()
            print(option2)
            if option2=="02":
                option3=day2()
                option4=year()
            elif option2 in["04","06","09","11"]:
                option3=day3()
                option4=year()
            elif option2 in ["01","03","05","07","08","10","12"]:
                option3=day()
                option4=year()
            f.write(str(option))
            f.write(str(option3))
            f.write("/")
            f.write(str(option2))
            f.write("/")
            f.write(str(option4))
            xx=f.readlines()
            print(xx)
        if option0==2:
            xx=f.readlines()
            print(xx)
        if option0==3:
            noexit=False
            print()
            print("Thank you for using the Administration Office")
            f.close()


lets_go()
