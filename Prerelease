def options():
    option_valid=False
    while not option_valid:
        try:
            choice=int(input("Please enter your 6 digit membership number"))
            if (len(str(choice))==6 and 0<=choice<=999999) or choice==-1:
                option_valid=True
            else:
                print("Please enter a valid option")
        except ValueError:
            print("Please enter a valid option")
    return choice

def day():
    option_valid=False
    while not option_valid:
        try:
            day=input("Please enter the day (1st is 01, 11th is 11)")
            print(day)
            print()
            if (1<=int(day)<=31 and len(str(day))==2) or (int(day)==-1):
                option_valid=True
            else:
                print("Please enter a valid day1")
                print()
        except ValueError:
            print("Please enter an integer")
            print()
    return day

def day2():
    option_valid=False
    while not option_valid:
        try:
            day2=input("Please enter the day (1st is 01, 11th is 11))")
            print(day2)
            print()
            if (1<=int(day2)<=28 and len(str(day2))==2) or (int(day2)==-1):
                option_valid=True
            else:
                print("Please enter a valid day2")
                print()
        except ValueError:
            print("Please enter an integer")
            print()
    return day2

def day3():
    option_valid=False
    while not option_valid:
        try:
            day3=input("Please enter the day (1st is 01, 11th is 11))")
            print(day3)
            print()
            if (1<=int(day3)<=30 and len(str(day3))==2) or (int(day3)==-1):
                option_valid=True
            else:
                print("Please enter a valid day3")
                print()
        except ValueError:
            print("Please enter an integer")
            print()
    return day3

def month():
    option_valid=False
    while not option_valid:
        try:
            month=input("Please enter the month (January is 01, December is 12)")
            print(month)
            print()
            if (1<=int(month)<=12 and len(str(month))==2) or (int(month)==-1):
                option_valid=True
            else:
                print("Please enter a valid month")
                print()
        except ValueError:
            print("Please enter an integer")
            print()
    return month

def year():
    option_valid=False
    while not option_valid:
        try:
            year=input("Please enter the year (2000 is 00, 2099 would be 99)")
            print(year)
            print()
            if (0<=int(year)<=99 and len(str(year))==2) or (int(year)==-1):
                option_valid=True
            else:
                print("Please enter a valid year")
                print()
        except ValueError:
            print("Please enter an integer")
            print()
    return year

