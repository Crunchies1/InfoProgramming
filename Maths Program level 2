def increasepoints(points):
    points1=0
    if points==5:
        points1=points1+5
    elif points==6:
        points1=points1+6
    elif points==7:
        points1=points1+7
    elif points==8:
        points1=points1+8
    elif points==9:
        points1=points1+9
    elif points==10:
        points1=points1+10
    else:
        points1=0
    return points1
    

def generate_question(difficulty):
    turn_count=0
    type_of_question=difficulty
    while turn_count!=20:
        turn_count=turn_count+1
        type_of_question=type_of_question+1
        if 1<=type_of_question<4:
            choosingNo=random.randint(1,4)
            if choosingNo==1:
                pointe=additioneasy()
                expoints=increasepoints(pointe)
            if choosingNo==2:
                pointe=subtractioneasy()
                expoints=increasepoints(pointe)
            if choosingNo==3:
                pointe=multiplicationeasy()
                expoints=increasepoints(pointe)
            if choosingNo==4:
                pointe=divisioneasy()
                expoints=increasepoints(pointe)
        if 4<=type_of_question<7:
            choosingNo=random.randint(1,4)
            if choosingNo==1:
                pointe=additioneasy2()
                expoints=increasepoints(pointe)
            if choosingNo==2:
                pointe=subtractioneasy2()
                expoints=increasepoints(pointe)
            if choosingNo==3:
                pointe=multiplicationeasy2()
                expoints=increasepoints(pointe)
            if choosingNo==4:
                pointe=divisioneasy2()
                expoints=increasepoints(pointe)
        if 7<=type_of_question<11:
            choosingNo=random.randint(1,4)
            if choosingNo==1:
                pointe=additionmedium()
                expoints=increasepoints(pointe)
            if choosingNo==2:
                pointe=subtractionmedium()
                expoints=increasepoints(pointe)
            if choosingNo==3:
                pointe=multiplicationmedium()
                expoints=increasepoints(pointe)
            if choosingNo==4:
