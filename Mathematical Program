mport random
import time

class Question:
    """Create a new question at any time"""

    def __init__(self, difficulty, value, timer=20):
        self.difficulty=difficulty
        self.value=value
        self.timer=timer

    def return_status(self):
        return{'difficulty':self.difficulty,'timer':self.timer,'value':self.value}


    def d_setting(self):
        if self.difficulty<=2:
            self.timer=20
        elif 3<=self.difficulty<5:
            self.timer=18
        elif 5<=self.difficulty<7:
            self.timer=16
        elif 7<=self.difficulty<9:
            self.timer=14
        elif 9<=self.difficulty<10:
            self.timer=12
        elif self.difficulty==10:
            self.timer=10

def create_q():
    menu=input("1. Play \n"
          "2. Rules \n"
          "3. Options \n"
          "4. Quit")
    return menu

points1=0

def generate_question(difficulty):
    type_of_question=difficulty
    if type_of_question<4:
        first_number=random.randint(1,10)
        second_number=random.randint(1,10)
        sign=random.randint(1,4)
        points=5
        if sign==1:
            answer=first_number+second_number
            print(first_number,"+",second_number)
            v=input(first_number,"+",second_number)
            if v==answer:
                points1=points1+points
                
        if sign==2:
            answer=first_number-second_number
            print(first_number,"-",second_number)
            v=input(first_number,"-",second_number)
            if v==answer:
                points1=points1+points
        if sign==3:
            answer=first_number*second_number
            print(first_number,"x",second_number)
            v=input(first_number,"x",second_number)
            if v==answer:
                points1=points1+points
        if sign==4:
            answer=first_number/second_number
            print(first_number,"÷",second_number)
            v=input=(first_number,"÷",second_number)
            if v==answer:
                points1=points1+points
            
    if 4<=type_of_question<7:
        first_number=random.randint(1,20)
